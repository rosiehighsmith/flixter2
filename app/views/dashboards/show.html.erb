<br />

<div class = "booyah-box col-xs-10 col-xs-offset-1 text-center">
  <h1 class = "dash-title">What I'm Learning</h1>
  <hr class = "gray"/>
  <br />
  <% current_user.enrolled_courses.each do |course| %>
    <h3>
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
    <%= image_tag course.image, class: 'img-responsive' %>
    <br />
      <%= link_to "Learn More", course_path(course), class: 'btn btn-primary' %> &nbsp;
      <%= course.description %>
    <hr/>
    <br class = "clr" />
  <% end %>

  <h1 class = "dash-title">What I'm Teaching</h1>
  <hr class = "gray"/>
  <br />
  <% current_user.courses.each do |course| %>
    <h3>
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br />
    <%= image_tag course.image, class: 'img-responsive' %> 
    <br />
      <%= link_to "More Info...", course_path(course), class: 'btn btn-primary' %> &nbsp;
      <%= course.description %>
    <hr/>
    <br class = "clr" />
  <% end %>
</div>